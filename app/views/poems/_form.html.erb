<% if @poem.user_id == current_user.id %>

<%= bootstrap_form_for(@poem) do |f| %>
<% if @poem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> stopped this poem from going forward:</h2>
      <ul>
	      <% @poem.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	  </ul>
	</div>
<% end %>
  <%= @poem.title %>
  <div class="field">
    Line 1 Syllables = <%= @poem.line1_syllable_count %>
    <%= f.text_field :line1 %><br>
    Line 2 Syllables = <%= @poem.line2_syllable_count %>
    <%= f.text_field :line2 %><br>
    Line 3 Syllables = <%= @poem.line3_syllable_count %>
    <%= f.text_field :line3 %><br>
    Line 4 Syllables = <%= @poem.line4_syllable_count %>
    <%= f.text_field :line4 %><br>
    Line 5 Syllables = <%= @poem.line5_syllable_count %>
    <%= f.text_field :line5 %><br>
    Line 6 Syllables = <%= @poem.line6_syllable_count %>
    <%= f.text_field :line6 %><br>
    Line 7 Syllables = <%= @poem.line7_syllable_count %>
    <%= f.text_field :line7 %><br>
    Line 8 Syllables = <%= @poem.line8_syllable_count %>
    <%= f.text_field :line8 %><br>
    Line 9 Syllables = <%= @poem.line9_syllable_count %>
    <%= f.text_field :line9 %><br>
    Line 10 Syllables = <%= @poem.line10_syllable_count %>
    <%= f.text_field :line10 %><br>
    
  </div>
  <div class="field">
  Set the status of your poem:<br>
  <%= f.label :creator_only, "Only you can see the poem" %>
  <%= f.radio_button :status, "creator_only" %>
  <%= f.label :round_participants, "Only those players in the round can see the poem" %>
  <%= f.radio_button :status, "round_participants" %>
  <%= f.label :open_to_all, "Everyone can see the poem" %>
  <%= f.radio_button :status, "open_to_all" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%end%>

<% else %>

<h2>Sorry, this isn't your poem to write</h2>
<%= link_to "Home", player_path(current_user.id) %>

<% end %>
