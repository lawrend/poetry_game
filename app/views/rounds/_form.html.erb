<%= bootstrap_form_for(@round) do |f| %>
  <% if @round.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> stopped this round from going forward:</h2>
      <ul>
	      <% @round.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	  </ul>
	</div>
  <% end %>
  <div class="field">
   <%= f.collection_check_boxes :poem_user_ids, User.possible_players.delete_if {|player| player == current_user}, :id, :username, label: "Eligible Players" %><br>
  </div>
  <div class="field">
    <%= f.text_field :title, label: "Poem Title" %><br>
    <%= f.number_field :line_count, label: "Number of Lines in the Poem" %><br>
  </div>
    <%= f.hidden_field :creator_id, :value => current_user.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
